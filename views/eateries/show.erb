<div class="content">
  <h2>Eatery Details</h2>

  <p>Name: <%= @eatery.name %></p>
  <p>Location: <%= @eatery.location %></p>
  <a href="/eateries/<%= @eatery.id %>/edit">Edit eatery details</a>
