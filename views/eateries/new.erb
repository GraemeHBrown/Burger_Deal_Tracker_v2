<h2>Add a new eatery</h2>

<div class="session-message">
  <% if @message %>
    <p><%= @message %></p>
  <% end %>
</div>

<form class="new-eatery-form" action="/eateries" method="POST">
  <div class="">
    <label for="name_input">Eatery name:</label>
    <input id="name_input" type="text" name="name" value="">
  </div>
  <div class="">
    <label for="location_input">Location:</label>
    <input id="location_input" type="text" name="location" value="">
  </div>

  <input type="submit" name="" value="Create eatery">

</form>
