
<h2>Deals for an eatery</h2>
<br>

<div class="session-message">
  <% if @message %>
    <p><%= @message %></p>
  <% end %>
</div>
<form action="/deals">
  <label>
    Select an eatery:
    <select name="eatery_id">
      <% for eatery in @eateries %>
      <option value="<%= eatery.id %>"><%= eatery.name %></option>
      <% end %>
    </select>
  </label>

  <input class="btn btn--action" type='submit' value="Select eatery">
</form>

<% unless @deals.empty? %>
  <h3>Deals for:  <%= @eatery.name  %></h3>

  <% @deals.each do |deal| %>
    <p>A '<%= deal.deal_name%>' deal is available on <%= deal.day%></p>
    <p> Featuring these burgers: </p>
      <% for burger in deal.burgers %>
        <p> <%= burger.name %> </p>
      <% end %>

    <div class="">
      <a href="/deals/<%= deal.id %>">Deal Details</a>
    </div>
  <% end %>
  <br>
  <hr>
  <form class="create-button" action="/deals/new">
    <input type="hidden" name="eatery_id" value="<%=@eatery.id%>">
    <input type="submit" name="" value="Add New Deal">
  </form>

<% end %>
