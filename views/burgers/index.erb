
<h2>All Burgers</h2>
<br>

<div class="session-message">
  <% if @message %>
    <p><%= @message %></p>
  <% end %>
</div>
<form action="/burgers">
  <label>
    Select an eatery:
    <select name="eatery_id">
      <% for eatery in @eateries %>
      <option value="<%= eatery.id %>"><%= eatery.name %></option>
      <% end %>
    </select>
  </label>

  <input class="btn btn--action" type='submit' value="Select eatery">
</form>

<% unless @eatery ==nil %>
  <h3>Eatery name: <%= @eatery.name %></h3>
    <% if @burgers.empty? %>
      <h3>No burgers listed for this eatery</h3>
    <% end %>
  <% unless @burgers.empty? %>
    <h3>Menu for:  <%= @eatery.name  %></h3>

    <% @burgers.each do |burger| %>
      <p>Name: <%= burger.name%></p>
      <p>Price: <%= burger.price%></p>
      <a href="/burgers/<%= burger.id %>">Burger Details</a>
    <% end %>
    <br>
    <hr>
  <% end %>
  <form class="create-button" action="/burgers/new">
    <input type="hidden" name="eatery_id" value="<%=@eatery.id%>">
      <input type="submit" name="" value="Add New Burger">
  </form>
<% end %>
